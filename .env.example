# A+ LMS Environment Configuration
# Copy this file to .env.local for development

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="A+ LMS"

# Database (for future backend implementation)
DATABASE_URL="postgresql://username:password@localhost:5432/aplus_lms"
REDIS_URL="redis://localhost:6379"

# Authentication (for future implementation) 
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# File Storage (for future implementation)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Email Service (for future implementation)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# Payment Gateway (for future implementation)
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Third-party Services
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
SENTRY_DSN="https://your-sentry-dsn"

# Development
NODE_ENV="development"
NEXT_TELEMETRY_DISABLED=1
